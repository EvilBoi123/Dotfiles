[Unit]
Description=Increase GPU core and memory clocks
After=multi-user.target

[Service]
Type=oneshot
ExecStartPre=/usr/bin/sh -c 'sleep 2 && echo manual | tee /sys/class/drm/card1/device/power_dpm_force_performance_level'
ExecStart=/usr/bin/sh -c 'echo 1 | tee /sys/class/drm/card1/device/pp_power_profile_mode'

[Install]
WantedBy=multi-user.target
